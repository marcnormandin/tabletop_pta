<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.utrgv.cgwa.metrec" >

    <uses-sdk
        android:maxSdkVersion="23"
        android:minSdkVersion="15" />

    <uses-feature
        android:name="android.hardware.microphone"
        android:required="true" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:logo="@drawable/ic_logo_wide"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".HomeScreenActivity"
            android:label="Tabletop PTA" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BuiltinMetronomeActivity"
            android:label="Metronome"
            android:parentActivityName=".HomeScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreenActivity" />
        </activity>

        <service
            android:name=".BuiltinMetronomeService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".NewProfileActivity"
            android:label="Profiler"
            android:parentActivityName=".ProfileListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileListActivity" />
        </activity>
        <activity
            android:name=".ProfileListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Profiles"
            android:parentActivityName=".HomeScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreenActivity" />
        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:parentActivityName=".HomeScreenActivity" >
        </activity>
        <activity
            android:name=".ViewProfileActivity"
            android:label="Pulse Profile"
            android:parentActivityName=".ProfileListActivity" >
        </activity>
        <activity
            android:name=".ViewTimeSeriesActivity"
            android:label="Time Series"
            android:parentActivityName=".ProfileListActivity" >
        </activity>
        <activity
            android:name=".SingleMetronomeAnalysisActivity"
            android:label="Single Metronome Analysis"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.utrgv.cgwa.metrec.HomeScreenActivity" />
        </activity>
    </application>

</manifest>
