<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="ERROR"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/listview_row_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="ERROR"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/listview_row_date" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_timeseries"
        android:background="@null"
        android:id="@+id/listview_row_button_timeseries"
        android:adjustViewBounds="true"
        android:focusable="false"
        />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_profile"
        android:background="@null"
        android:id="@+id/listview_row_button_profile"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/listview_row_button_timeseries"
        android:layout_toRightOf="@+id/listview_row_button_timeseries"
        android:layout_toEndOf="@+id/listview_row_button_timeseries"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ERROR"
        android:id="@+id/listview_row_bpm"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/listview_row_button_profile"
        android:layout_toEndOf="@+id/listview_row_button_profile"
        android:paddingLeft="16dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/checkBox"
        android:layout_alignBottom="@+id/listview_row_bpm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
